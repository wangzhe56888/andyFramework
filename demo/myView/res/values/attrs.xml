<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 
    	旋转布局控件CircleLayout属性
     -->
    <declare-styleable name="Circle">
        <attr name="circleBackground" format="integer"></attr>
        <attr name="firstChildPosition">
            <enum name="East" value="0" />
            <enum name="South" value="90" />
            <enum name="West" value="180" />
            <enum name="North" value="270" />
        </attr>
        <attr name="rotateToCenter" format="boolean" />
        <attr name="isRotating" format="boolean" />
    </declare-styleable>
    <!-- CircleLayout子控件CircleImageView属性 -->
    <declare-styleable name="CircleImageView">
        <attr name="name" format="string" />
    </declare-styleable>
    
    <!-- 左侧滑动菜单，用HorizontalScrollView实现 -->
    <attr name="rightPadding" format="dimension" />
    <declare-styleable name="SlidingMenu">
        <attr name="rightPadding" />
    </declare-styleable>
</resources>
